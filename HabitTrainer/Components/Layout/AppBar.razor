@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudElement Class="text-2xl">Habit Trainer & Tracker</MudElement>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Rounded.AddCard" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Material.Rounded.Settings" Color="Color.Inherit" />
    </MudAppBar>

    <MudDrawer @bind-Open="@_open" Elevation="1">
        <MudDrawerHeader >
            <MudText Typo="Typo.h6">My Habbit Trainer</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/habits" Match="NavLinkMatch.All"><MudIcon Icon="@Icons.Material.Sharp.BarChart" />Habits</MudNavLink>
            <MudNavLink Href="/statistics" Match="NavLinkMatch.All"><MudIcon Icon="@Icons.Material.Filled.PendingActions" />Statistics</MudNavLink>
            <MudNavLink Href="/profile"  Match="NavLinkMatch.All"><MudIcon Icon="@Icons.Material.Filled.SelfImprovement" />Profile</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
</MudLayout>


@code {
    private bool _open = false;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}
